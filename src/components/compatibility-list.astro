---
// Importa el tipo de props
import type { CompatibilityItem } from "~/types";

export interface Props {
  items: Array<CompatibilityItem>;
  title: string;
  url: string;
}

const { items, title, url } = Astro.props;
---

<div class="w-full">
  <div class="relative border border-default bg-white px-6 pb-4 pt-8">
    <h3
      class="bg-white absolute right-4 top-0 -translate-y-1/2 rounded-full border border-current text-black px-4 py-1 uppercase tracking-tight text-xs"
    >
      {title}
    </h3>
    <ul class="grid grid-cols-2 gap-8 sm:grid-cols-3 md:grid-cols-6 text-black">
      {
        items.map((item) => (
          <li>
            <a class="flex flex-col items-center gap-2" href={item.url}>
              {item.image ? (
                <img src={item.image} alt={item.title} class="h-32 w-32 object-contain" /> <!-- Imagen -->
              ) : item.icon ? (
                <item.icon class="h-16 w-16 text-black" /> <!-- Ãcono de React si no hay imagen -->
              ) : null}
              <span class="text-black">{item.title}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>