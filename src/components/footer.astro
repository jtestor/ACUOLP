---
import { Icon } from "astro-icon/components";

// Cambia la ruta para apuntar a la imagen en la carpeta "public/assets"
const logo = "/assets/ACUOLogo.jpg"; 

import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "#splash",
    description: "Home",
    icon: "mdi:home",
  },
  {
    url: "https://www.instagram.com/acuochile/",
    description: "Acuo instagram",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://www.linkedin.com/company/acuo-spa/",
    description: "Acuo linkedin",
    icon: "fa-brands:linkedin",
  },
  {
    url: "https://twitter.com/astrodotbuild",
    description: "Astro on Twitter",
    icon: "fa-brands:facebook",
    
  },
];
---

<footer class="relative flex flex-col md:flex-row items-center justify-between gap-6 md:gap-24 p-8 bg-white">
  
  <!-- Contenedor del logo y texto -->
  <div class="flex flex-col items-center md:items-start">
    <img src={logo} alt="ACUO Logo" class="w-32 md:64 h-auto mb-4 md:mb-2" />
    <p class="text-black text-xs text-center md:text-left">©ACUO. All rights reserved</p>
  </div>
  
  <!-- Contenedor de los links e íconos -->
  <div class="flex flex-col items-center md:items-end gap-5">
    <ul class="grid grid-cols-4 gap-4">
      {
        links.map((link) => (
          <li>
            <a
              class="flex items-center justify-center w-12 h-12 rounded-full border-2 border-current text-black"
              href={link.url}
            >
              <span class="sr-only">{link.description}</span>
              <Icon class="size-6" name={link.icon} />
            </a>
          </li>
        ))
      }
    </ul>
    
    <p class="text-black text-xs text-center md:text-right">made by José Miguel Testor</p>
  </div>
</footer>
